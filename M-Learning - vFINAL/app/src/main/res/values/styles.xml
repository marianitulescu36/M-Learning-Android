    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#868A88</item>
        <item name="colorPrimaryDark">#3C4240</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorBlack</item>
    </style>
</resources>